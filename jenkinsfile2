pipeline {
    agent any

    stages {
        stage('scm') {
            steps {
                git 'https://github.com/awspandian/vasu.git'
            }
        }
		stage('build') {
            steps {
                sh 'mvn clean'
				sh 'mvn install'
            }
        }
		stage('deploy') {
            steps {
                sh 'cp -rp "/var/lib/jenkins/workspace/jan3-pipeline/target/sweet.war" "/opt/apache-tomcat/webapps"'
            }
        }
    }
}
